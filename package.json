{
    "name": "release",
    "version": "1.1.3",
    "main": "lib/bin/run.js",
    "bin": {
        "release": "lib/bin/run.js"
    },
    "dependencies": {
        "commander": "^2.15.1",
        "generate-changelog": "^1.7.1",
        "git-tags": "^0.2.4",
        "inquirer": "^5.2.0",
        "superagent": "^3.8.2"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-chai-friendly": "^0.4.1",
        "eslint-plugin-import": "^2.11.0",
        "eslint-plugin-mocha": "^5.0.0",
        "mocha": "^5.1.0",
        "nyc": "^11.7.1",
        "pre-commit": "^1.2.2",
        "sinon": "^4.5.0",
        "sinon-chai": "^3.0.0"
    },
    "scripts": {
        "build": "babel src -d lib",
        "lint": "./node_modules/.bin/eslint src/* --fix",
        "test": "nyc mocha --require babel-core/register src/**/*.test.js",
        "prepublish": "npm run build",
        "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
    },
    "nyc": {
        "all": true,
        "include": [
            "src/**/*.js"
        ]
    },
    "pre-commit": [
        "precommit-msg",
        "lint"
    ],
